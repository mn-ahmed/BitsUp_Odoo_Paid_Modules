<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_default_invoice_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">sh.default.invoice.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2 class="mt16">Generate Invoice Automatically</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="iface_invoicing">
                        <div class="content-group mt16">
                            <field name="pos_sh_enable_default_invoice"  />
                            <label for="pos_sh_enable_default_invoice" class="o_light_label"  />
                            <div class="text-muted" id="invoice_journal" style="margin-left: 26px; margin-top: -6px;">
                                Generate Invoice Automatically
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>